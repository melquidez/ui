set au=.*
set defsearch='duckduckgo'
set editor=vim
set go-=br
set go+=n

set! browser.fullscreen.animateUp=0
set! browser.pocket.enabled=false
set! browser.startup.homepage="http://localhost:3000/"
set! browser.tabs.closeWindowWithLastTab=false
set! full-screen-api.approval-required=false

nmap -builtin g; :
" nmap -builtin : ;

nmap -builtin <c-o> :1ba<CR>
nmap -builtin <c-i> :1fo<CR>

nmap -builtin d <C-D>
nmap -builtin u <C-U>
nmap -builtin <C-D> d
nmap -builtin <C-U> u

nmap -builtin <C-S-n> :tabm! +1<CR>
nmap -builtin <C-S-p> :tabm! -1<CR>
imap -builtin <C-n> <Nop>

nmap -builtin H ^
nmap -builtin L $

nmap -builtin \\ <C-^>
nmap -builtin <space>b :!acpi -b<CR>
nmap -builtin <space>d :tabopen google define 
nmap -builtin <space>f ;f
nmap -builtin <space>l :ls<CR>
nmap -builtin <space>m :set showtabline=never<CR>
nmap -builtin <space>o :downloads<CR>
nmap -builtin <space>p <C-S-p>
nmap -builtin <space>s <C-z>
nmap -builtin <space>t :set showtabline=always<CR>
" nmap -builtin ,v :set fullvim!<CR>
nmap -builtin ,z :source ~/.pentadactylrc<CR>

colorscheme colors
source ~/.pentadactyl/userChrome.css

hi FontCode -append font-family: 'limey' !important; font-size: 8pt !important; font-weight: normal !important;
hi FontFixed -append font-family: 'limey' !important; font-size: 8pt !important; font-weight: normal !important;
hi Normal -append font-family: 'limey' !important; font-size: 8pt !important; font-weight: normal !important;
hi TabIconNumber display: none !important;
hi TabNumber display: none !important;
