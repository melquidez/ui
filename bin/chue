#!/bin/bash

cd ~/ui

DIR="themes/*/"
DIRS=($DIR)
FIRST=`echo "${DIRS[@]:0:1}" | awk -F'/' '{print $2}' -`

themes () {
  for dir in $DIR; do
    dir=`echo $dir | awk -F'/' '{print $2}' -`
    echo "- $dir"
  done
}

containsElement () {
  local e

  for e in "${@:2}"; do
    [[ "$e" == "$1" ]] &&
      return 0
  done

  return 1
}

ask () {
  read -p "Choose a colorscheme. Available options are:

$(themes)

($FIRST) > " choice

  if [[ -z "$choice" ]]; then
    stowlink ${FIRST}
    return 0
  fi

  check="themes/${choice}/"
  containsElement "${check}" "${DIRS[@]}"

  if [[ $? -eq 1 ]]; then
    echo -e "\nERROR: There is no theme '${choice}', try again!\n"
    ask
  else
    stowlink ${choice}
    return 0
  fi
}

stowlink () {
  for dir in $DIR; do
    dir=`echo $dir | awk -F'/' '{print $2}' -`
    stow -t ~ -d themes -D $dir
  done

  ./misc/make-default-directories
  stow -t ~ -d themes $1
}

if [ $# -eq 0 ]; then
  ask
else
  check="themes/$1/"
  containsElement "${check}" "${DIRS[@]}"

  if [[ $? -eq 1 ]]; then
    echo -e "ERROR: There is no theme '$1'!\n"
    ask
  else
    stowlink $1
  fi
fi
